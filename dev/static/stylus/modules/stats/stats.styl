.stat
	max-width 363px
	margin-bottom 62px
	&__pic
		width 100%
		margin-bottom 26px

	&__video
		position relative
		width 180%
		left -40%
		&--1
			left -60%
	&-list
		display flex
		flex-wrap wrap
		justify-content space-between
.video-wrap
	max-width 363px
	max-height 363px
	overflow hidden
	margin-bottom 26px



.only-frame
	padding 100px 0 150px
	position relative
	&__cost
		position absolute
		right 15vw
		font-size 32px
		font-weight 700
	img
		position absolute
		right 0
		top 10%
		width 688px
		z-index -1
		// &:after
		// 	content '930 руб.'
		// 	position absolute
		// 	z-index 2
		// 	left 0
		// 	top 0
		// 	font-size 20px

	.section-title
		max-width 568px
		margin 0
		&-only-frame
			color clr-prim
			margin-bottom 26px


@media (max-width 720px)
	.stat-list
		justify-content center
	.only-frame
		padding-bottom 400px
		.btn
			display block
			width 300px
			margin 0 auto
		.section-title
			margin-bottom 10px
		.section-title-only-frame
			margin-bottom 32px
		&__cost
			bottom 100px
		&__pic
			position absolute
			top 0
			width 100%
			height 100%
		img
			width 100%
			top 55%

@media (max-width ipadS && min-width 721px)
	.stat
		max-width 45%
		&-list
			justify-content space-around

	.only-frame
		padding-bottom 500px
		.btn
			margin 0
		&__pic
			top -150px
		&__cost
			left 40%