// radio
.calculator-check
	padding 25px
	border 3px solid #f8f8f8
	cursor pointer
	box-sizing border-box
	transition all 0.5s

.calculator-height-item:checked ~ .calculator-check
	background-color clr-prim
	color #fff
	border-color clr-prim
.calculator-width-item:checked ~ .calculator-check
	background-color clr-prim
	color #fff
	border-color clr-prim
.calculator-length-item:checked ~ .calculator-check
	background-color clr-prim
	color #fff
	border-color clr-prim
.calculator-corners-item:checked ~ .calculator-check
	background-color clr-prim
	color #fff
	border-color clr-prim
.calculator-frame-item:checked ~ .calculator-check
	border 4px solid clr-prim
.calculator-materials-item:checked ~ .calculator-check
	border 4px solid clr-prim




//inners
.calculator-inner
	display flex



// label containers
.calculator-controller
	display flex
	margin-bottom 62px

.calculator-field-name
	margin-right 26px
	min-width 200px
	text-align right

.height-label
	&--1
		border-radius 16px 0 0 16px
	&--3
		border-radius 0 16px 16px 0

.width-label
	&--1
		border-radius 16px 0 0 16px
	&--4
		border-radius 0 16px 16px 0

.length-label
	&--1
		border-radius 16px 0 0 16px
	&--4
		border-radius 0 16px 16px 0

.frame-label
	&--1
		border-radius 16px 0 0 16px
	&--2
		border-radius 0 16px 16px 0

.corners-label
	&--1
		border-radius 16px 0 0 16px
	&--2
		border-radius 0 16px 16px 0


// inputs
.calculator
	input
		appearance none


// materials
.calculator-materials-inner
	max-width 550px
	display flex
	justify-content space-between
	flex-wrap wrap
	// flex-flow row wrap

.calculator-materials-item
	display flex

.materials-label
	// width 121px
	height 90px
	text-align center
	color #fff
	border-radius 16px
	padding 18px 33px
	margin-bottom 26px





