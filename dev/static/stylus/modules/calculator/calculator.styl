// pop
.calculator-form
	position relative
.phone-pop-wrap
	display none
	position fixed
	min-width 100vw
	height 100vh
	background-color rgba(0,0,0,0.8)
	z-index 101
	top 0
	left 0
	right 0

.phone-pop
	display flex
	flex-direction column
	width 300px
	height 250px
	border-radius 16px
	box-sizing content-box
	padding 62px
	background #f0f0f0
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin auto
	input
		f-btn()
		font-size 18px
		padding 11px 36px
		border none
		border-radius 12px
		margin-bottom 16px


.close-phone-pop
	position absolute
	right 10px
	top 10px
	font-weight 700
	display block
	border-radius 60px
	padding 8px 5px 5px 5px
	background-color clr-f
	color #fff
	width 32px
	height 32px
	text-align center
	line-height 1

.calculator-cost-dubler
	display none





@media (max-width 720px)
	.calculator
		h3
			text-align center
			margin-bottom 26px
			margin-right 0
			width 100%
		.section-title
			margin-bottom 62px !important
		&-controller
			flex-direction column !important
			justify-content center
			align-items center
			margin-bottom 46px

		&-length
			label
				padding-left 22px
				padding-right 22px
		&-form
			display flex
			flex-direction column
	.calculator-inner
		margin-bottom 42px
	.calculator-materials
		order -2
		margin-bottom 0
	.calculator-frame
		order -1
		.slick-arrow
			top -50px !important


	// img
	.calculator-img-wrap
		width 100%
		height 40vh
		position -webkit-sticky
		position sticky
		z-index 10
		top 10px
		bottom 10px
		margin 0

		.frame-img
			// position relative
			width 300px  !important
			height 180px
			margin 0 auto
		.calculator-img-frame
		.calculator-img-materials
			width 100%
			margin 0 auto
			left 0
			right 0
		.calculator-img-materials
			top 15px
		.material-img
			width 320px !important
			height 70px
			margin 0 auto
			left 10vw !important
			right 0


	// controls
	.calculator-inner
		width 100% !important
		justify-content center
	.calculator-field-name
		margin-bottom 42px !important

	.height-label
		padding-left 25px
		padding-right 25px
	.width-label
	.length-label
		padding-left 15px !important
		padding-right 15px !important

	.calculator-cost-wrap
		position relative
		left 0
		top 0

	.calculator-cost-wrap
		margin 0 auto
		.btn
			margin 0 auto
			width 300px
	.calculator-cost
		padding-left 20% !important

	// pop
	.phone-pop
		width 80%
		height 40%
		padding 50px 30px
		input
			padding-top 16px
			padding-bottom 16px
	.calculator-submit
		width 100%
	.calculator-cost
		display none
	.calculator-cost-dubler
		position fixed
		font-size 32px
		font-weight 700
		top 250px
		left 0
		right 0
		text-align center



