// calculator
.calculator
	background-color #f8f8f8
	.section-title
		margin-bottom 124px
	&-content
		position relative
.calculator-controls
	margin-left auto
	max-width 760px
	z-index 3
	position relative

.calculator-img
	max-height 622px
	position relative






// radio
.calculator-check
	padding 25px
	border 3px solid #f8f8f8
	cursor pointer
	box-sizing border-box
	transition all 0.5s

.calculator-height-item:checked ~ .calculator-check
	background-color clr-prim
	color #fff
	border-color clr-prim
.calculator-width-item:checked ~ .calculator-check
	background-color clr-prim
	color #fff
	border-color clr-prim
.calculator-length-item:checked ~ .calculator-check
	background-color clr-prim
	color #fff
	border-color clr-prim
.calculator-corners-item:checked ~ .calculator-check
	background-color clr-prim
	color #fff
	border-color clr-prim
.calculator-frame-item:checked ~ .calculator-check
	border 4px solid clr-prim
.calculator-materials-item:checked ~ .calculator-check
	border 4px solid clr-prim

.calculator
	input[disabled] ~ .calculator-check
		color #dfdfdf




//inners
.calculator-inner
	width 400px
	display flex
	// justify-content space-between
	flex-wrap wrap
	&:last-child
		width 520px



// label containers

// .label-container
// 	min-width 91px
