// 		width 91px !important
.calculator-controller
	display flex
	margin-bottom 62px

.calculator-field-name
	margin-right 26px
	min-width 200px
	text-align right
	align-self center

.height-label
	padding-left 33px
	padding-right 33px
	&--1
		border-radius 16px 0 0 16px
	&--3
		border-radius 0 16px 16px 0

.width-label
	padding-left 29px
	padding-right 29px
	&--1
		border-radius 16px 0 0 16px
	&--4
		border-radius 0 16px 16px 0

.length-label
	&--1
		border-radius 16px 0 0 16px
	&--4
		border-radius 0 16px 16px 0

.frame-label
	&--1
		border-radius 16px 0 0 16px
	&--2
		border-radius 0 16px 16px 0

.corners-label
	&--1
		border-radius 16px 0 0 16px
	&--2
		border-radius 0 16px 16px 0


// inputs
.calculator
	input
		appearance none

.materials-label
	width 121px
	height 90px
	text-align center
	color #fff
	border-radius 16px
	display inline-block







