@-webkit-keyframes blink-caret { 50% { border-color: transparent; } }
em {
	border-right: .15em solid clr-prim;
	width: 20ch;
	white-space: nowrap;
	overflow: hidden;
  margin-top: 0;
  color: #3295dd;
	-webkit-animation: typing 3s steps(21, end),
	blink-caret .5s step-end infinite alternate;
}

// burger
.burger
	display flex
	justify-content space-around
	flex-flow column wrap
	size(40px, 40px)
	cursor pointer
	span
		display block
		width 40px
		height 4px
		background-color clr-f
	&__line
		transition all .5s
		display block
		position relative
		size(100%, 4px)
		border-radius 4px
	&--active > span
		transition all .5s
		&:first-child
			transform rotate(45deg)
		&:last-child
			transform rotate(-45deg)
			margin-top -100%
		&:nth-child(even)
			display none

