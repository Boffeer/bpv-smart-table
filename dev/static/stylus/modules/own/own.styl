.own
	&-text
		p
			max-width 400px
			margin-bottom 42px
	&-bullets
		display flex
		justify-content space-around
		.bullet__text
			max-width 238px
	&-colors
		&-list
			display flex
			justify-content space-around
			flex-wrap wrap
		p
			max-width 360px
			margin 0 auto
			text-align center
	&-color-item
		width 261px
		height 261px
		text-align center
		border-radius 28px
		margin-bottom 42px
		color #fff
		f-reg()
		vertical-align middle
		padding 110px 0
		&--1
			background-image url('../img/content/9-produce/materials/1.jpg')
			background-size 200%
			color clr-f
		&--2
			padding 80px 0
			background-image url('../img/content/9-produce/materials/2.jpg')
		&--3
			background-image url('../img/content/9-produce/materials/3.jpg')
		&--4
			background-image url('../img/content/9-produce/materials/4.jpg')
		&--5
			background-image url('../img/content/9-produce/materials/5.jpg')
		&--6
			background-image url('../img/content/9-produce/materials/6.jpg')
		&--7
			background-image url('../img/content/9-produce/materials/7.jpg')
		&--8
			background-image url('../img/content/9-produce/materials/8.jpg')


@media (max-width 720px)
	.own-bullets
		flex-direction column
		align-items center
		.bullet
			align-items center
			justify-content center

	.own-color-item
		width 150px
		height 150px
		padding 40px 20px
		&--2
			padding-top 20px
		&--8
			padding-top 60px